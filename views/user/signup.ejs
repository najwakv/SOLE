  <section class="sign-up-body mt-5">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3" style="height:100%;">
    <div class="container h-100" style="height:100% ;">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-10 col-lg-5 col-xl-6"  style=" max-width: 480px;">
          <div class="card sign-up-card" style="border-radius: 15px;  box-shadow: 0 14px 28px rgb(0 0 0 / 25%), 0 10px 10px rgb(0 0 0 / 22%); height: 670px;">
            <div class="card-body p-5 ">
              <h2 class="text-uppercase text-center mb-3" style="font-weight: 300;">Create an account</h2>

              <% if(signupError){%> 
                <p class="" style="color:red ;">Email already exist</p>
              <%} %>

              <a href="/signin" style="text-decoration: none;"><p class="text-center text-muted mt-4 mb-2" style="margin: 84px">Already have an acount?</p></a>

              <form action="/otp" method="post">

                <div class="form-outline mb-2">
                  <input type="text" required id="form3Example1cg" required pattern="[A-Za-z]{3,22}" class="form-control form-control-lg" name="firstName"/>
                  <label class="form-label" for="form3Example1cg">First Name</label>
                </div>

                <div class="form-outline mb-2">
                  <input type="text" required id="form3Example1cg" required pattern="[A-Za-z]{1,22}" class="form-control form-control-lg" name="lastName"/>
                  <label class="form-label" for="form3Example1cg">Last Name</label>
                </div>

                <div class="form-outline mb-2">
                  <input type="email" id="form3Example3cg" required
                  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required class="form-control form-control-lg" name="email" />
                  <label class="form-label" for="form3Example3cg">Email</label>
                  
                </div>

                <div class="form-outline mb-2">
                    <input type="number" required id="form3Example3cg" required pattern="[7896][0-9]{9}" class="form-control form-control-lg" name="phone" />
                    <label class="form-label" for="form3Example3cg">Phone</label>
                </div>

                <div class="form-outline mb-2">
                  <input type="password" required id="form3Example4cg" required pattern=".{5,}" class="form-control form-control-lg" name="password"/>
                  <label class="form-label" for="form3Example4cg">Password</label>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn  btn-block btn-lg gradient-custom-4  sign-button" >Register</button>
                </div>

                <!-- <p class="text-center text-muted mt-3 mb-0">Have already an account? <a href="/signin"
                    class="fw-bold text-black"><u>Login here</u></a></p> -->

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
