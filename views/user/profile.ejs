  <body style="background-color: white">
    <div class="fh5co-loader"></div>

    <div id="page">
      <nav class="fh5co-nav" role="navigation">
        <div class="container">
          <div class="row">
            <div class="col-md-1 col-xs-1">
              <div id="fh5co-logo"><a href="/">SOLE</a></div>
            </div>
            <div class="col-md-8 col-xs-8 lg-8 xl-8 text-center menu-1">
              <ul>
                <li>
                  <a href="/">Home</a>
                </li>

                <li class="has-dropdown">
                  <a href="">Shop</a>
                  <ul class="dropdown">
                    <% category.forEach(function(x) { %>
                    <li>
                      <a
                        href="/categoryProductsPage/<%= x._id %>/<%= x.category %>"
                      >
                        <%= x.category%>
                      </a>
                    </li>
                    <% }) %>
                  </ul>
                </li>

                <li><a href="about.html">About</a></li>
                <li><a href="contact.html">Contact</a></li>
              </ul>
            </div>
            <div class="col-md-3 col-xs-4 text-right hidden-xs menu-2">
              <ul>
                <li class="shopping-cart">
                  <a href="#" class="cart"
                    ><span
                      ><small>0</small><i class="icon-shopping-cart"></i></span
                  ></a>
                </li>
                <li class="shopping-cart">
                  <a href="#" class="cart"
                    ><span><i class="bi bi-heart-fill"></i></span
                  ></a>
                </li>
                <li class="has-dropdown shopping-cart">
                  <a href="#" class="cart"
                    ><span><i class="bi bi-person-fill"></i></span
                  ></a>
                  <ul class="dropdown">
                    <% if(!login) { %>
                    <li><a href="/signin">Login</a></li>
                    <% } %> <% if(login) { %>
                    <li><a href="/profile"> <%= user %> </a></li>
                    <li><a href="/logout">Logout</a></li>

                    <% } %>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <div class="container">
        <div class="main-body">
          <!-- Breadcrumb -->
          <nav
            aria-label="breadcrumb"
            class="main-breadcrumb"
            style="font-size: 24px"
          >
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">
                User Profile
              </li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body" style="height: 236px">
                  <div
                    class="d-flex flex-column align-items-center text-center"
                  >
                    <img
                      src="https://bootdey.com/img/Content/avatar/avatar7.png"
                      alt="Admin"
                      class="rounded-circle"
                      width="150"
                    />
                    <div class="mt-3" style="font-size: 16px">
                      <h4><%= userdetails.fullName %></h4>
                      <p class="text-secondary mb-1">
                        <%= userdetails.email %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8" style="font-size: 16px">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">First Name</h6>
                    </div>
                    <div
                      class="col-sm-9 text-secondary"
                      style="font-size: 16px"
                    >
                      <%= userdetails.firstName %>
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Last Name</h6>
                    </div>
                    <div
                      class="col-sm-9 text-secondary"
                      style="font-size: 16px"
                    >
                      <%= userdetails.lastName %>
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div
                      class="col-sm-9 text-secondary"
                      style="font-size: 16px"
                    >
                      <%= userdetails.email %>
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div
                      class="col-sm-9 text-secondary"
                      style="font-size: 16px"
                    >
                      <%= userdetails.phone %>
                    </div>
                  </div>

                  <hr />
                  <div class="row">
                    <div class="col-sm-6">
                      <a
                        class="btn btn-info"
                        style="width: 100px; font-size: 14px"
                        href="/editprofilepage/<%= userdetails._id %>"
                        >Edit Profile</a
                      >
                    </div>
                    <div class="col-sm-6">
                      <a
                        class="btn btn-info"
                        style="width: 100px; font-size: 14px; float: right;"
                        href="/trackOrder"
                        >View orders</a
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
