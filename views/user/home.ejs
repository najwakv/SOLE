<%-include('../user/layout/user-header-layout.ejs') %>

<section>
  <aside id="fh5co-hero" class="js-fullheight">
    <div class="flexslider js-fullheight">
      <ul class="slides">
        <% banners.forEach(function(x) { %>
        <li style="background-image: url('/images/cardigans/<%= x.image %>')">
          <div class="overlay-gradient"></div>
          <div class="container">
            <div
              class="col-md-6 col-md-offset-3 col-md-pull-3 js-fullheight slider-text"
            >
              <div class="slider-text-inner">
                <div class="desc">
                  <h2><%= x.bannerName %></h2>
                  <p><%= x.description %></p>
                  <p>
                    <a
                      href="/allProductPage"
                      class="btn btn-primary btn-outline btn-lg"
                      >Shop Now</a
                    >
                  </p>
                </div>
              </div>
            </div>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>
  </aside>

  <div id="fh5co-product" style="background-color: rgb(225, 225, 225)">
    <div class="container">
      <div class="row animate-box">
        <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
          <span>Cool Stuff</span>
          <h2>Products.</h2>
          <p>
            Our products are designed, hand-knitted and made to order. When you
            place an order it will be knitted and shipped in 3 weeks.
          </p>
        </div>
      </div>
      <div class="row">
        <% products.forEach(function(x){ %>
        <div class="col-md-4 text-center animate-box" style="color: black">
          <div class="product">
            <div
              class="product-grid"
              style="
                background-image: url('/images/cardigans/<%= x.image[0] %>');
              "
            >
              <div class="inner">
                <p>
                  <a href="/singleProduct/<%= x._id %>" class="icon"
                    ><i class="icon-eye"></i
                  ></a>
                </p>
              </div>
            </div>
            <div class="desc">
              <h3 style="color: black">
                <a href="singleProduct/<%= x._id %>"> <%= x.productName %> </a>
              </h3>
              <span class="price">RS: <%= x.price %></span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <br />
      <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
        <form action="/allproductpage" method="get">
          <button
            type="submit"
            class="btn btn-round px-5"
            style="
              width: 200px;
              height: 50px;
              background-color: whitesmoke;
              color: black;
            "
          >
            View All
          </button>
        </form>
      </div>
    </div>
  </div>

  <div id="fh5co-testimonial" class="fh5co-bg-section">
    <div class="container">
      <div class="row animate-box">
        <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
          <span>Testimony</span>
          <h2>Happy Clients</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="row animate-box">
            <div class="owl-carousel owl-carousel-fullwidth">
              <% testimony.forEach(function(x){ %>
              <div class="item">
                <div class="testimony-slide active text-center">
                  <figure>
                    <img src="/images/cardigans/<%= x.image[0] %>" alt="user" />
                  </figure>
                  <span
                    ><%= x.name %> <a href="#" class="twitter">Twitter</a></span
                  >
                  <blockquote>
                    <p>&ldquo;<%= x.description%>&rdquo;</p>
                  </blockquote>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div id="fh5co-started">
  <div class="container">
    <div class="row animate-box">
      <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
        <h2>Newsletter</h2>
        <p>Just stay tune for our latest Product. Now you can subscribe</p>
      </div>
    </div>
    <div class="row animate-box">
      <div class="col-md-8 col-md-offset-2">
        <form class="form-inline">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label for="email" class="sr-only">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="Email"
              />
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <button type="submit" class="btn btn-default btn-block">
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%-include('../user/layout/user-footer-layout.ejs') %>
