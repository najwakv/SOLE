<%-include('../user/layout/user-header-layout.ejs') %>

	<section>
		<aside id="fh5co-hero" class="js-fullheight">
			<div class="flexslider js-fullheight">
				<ul class="slides">
					<% banners.forEach(function(x) { %>
						<li style="background-image: url('/images/cardigans/<%= x.image %>');">
							<div class="overlay-gradient"></div>
							<div class="container">
								<div class="col-md-6 col-md-offset-3 col-md-pull-3 js-fullheight slider-text">
									<div class="slider-text-inner">
										<div class="desc">
											<!-- <span class="price">$800</span> -->
											<h2>
												<%= x.bannerName %>
											</h2>
											<p>
												<%= x.description %>
											</p>
											<p><a href="/allproductpage" class="btn btn-primary btn-outline btn-lg">Shop Now</a></p>
										</div>
									</div>
								</div>
							</div>
						</li>
						<% }) %>
				</ul>
			</div>
		</aside>


		<div id="fh5co-product" style="background-color: rgb(225, 225, 225);">
			<div class="container">
				<div class="row animate-box">
					<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
						<span>Cool Stuff</span>
						<h2>Products.</h2>
						<p>Our products are designed, hand-knitted and made to order.
							When you place an order it will be knitted and shipped in 3 weeks.
						</p>
					</div>
				</div>
				<div class="row">
					<% products.forEach(function(x){ %>
						<div class="col-md-4 text-center animate-box" style="color: black;">
							<div class="product">
								<div class="product-grid"
									style="background-image:url('/images/cardigans/<%= x.image[0] %>')">
									<div class="inner">
										<p>
											<!-- <a href="single.html" class="icon"><i class="icon-shopping-cart"></i></a> -->
											<a href="/singleProduct/<%= x._id %>" class="icon"><i class="icon-eye"></i></a>
										</p>
									</div>
								</div>
								<div class="desc">
									<h3 style="color: black;"><a href="singleProduct/<%= x._id %>" >
											<%= x.productName %>
										</a>
									</h3>
									<span class="price">RS: <%= x.price %></span>
								</div>
							</div>
						</div>
					<% }) %>
				</div>
				<br>
				<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
					<form action="/allproductpage" method="get">
					  <button type="submit" class="btn btn-round px-5" style="width: 200px; height: 50px; background-color: whitesmoke; color: black;">View All</button>
					</form>
				</div>
			</div>
		</div>

		<div id="fh5co-testimonial" class="fh5co-bg-section">
			<div class="container">
				<div class="row animate-box">
					<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
						<span>Testimony</span>
						<h2>Happy Clients</h2>
					</div>
				</div>
				<div class="row">
					<div class="col-md-10 col-md-offset-1">
						<div class="row animate-box">
							<div class="owl-carousel owl-carousel-fullwidth">
								<div class="item">
									<div class="testimony-slide active text-center">
										<figure>
											<img src="images/person1.jpg" alt="user">
										</figure>
										<span>Jean Doe, via <a href="#" class="twitter">Twitter</a></span>
										<blockquote>
