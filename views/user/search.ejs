<%-include('../user/layout/user-header-layout.ejs') -%>

    <header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner"
        style="background-image:url('https://st1.myideasoft.com/idea/jr/73/themes/selftpl_62177def8f4d9/assets/uploads/en/category_image_1.jpeg?revision=7.2.4.3-10-1669725188');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <div class="display-t">
                        <div class="display-tc animate-box" data-animate-effect="fadeIn">
                            <h1>You searched for <%= searchQuery %></h1>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div id="fh5co-product"">
        <div class="container">
            <!-- <div class="row animate-box">
                <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                    <span>Cool Stuff</span>
                    <h2>Products.</h2>
                    <p>Dignissimos asperiores vitae velit veniam totam fuga molestias accusamus alias autem provident.
                        Odit ab aliquam dolor eius.</p>
                </div>
            </div> -->
            <div class="row">
                <% search.forEach(function(x){ %>
                    <div class="col-md-4 text-center animate-box" style="color: black;">
                        <div class="product">
                            <div class="product-grid"
                                style="background-image:url('/images/cardigans/<%= x.image[0] %>')">
                                <div class="inner">
                                    <p>
                                        <!-- <a href="single.html" class="icon"><i class="icon-shopping-cart"></i></a> -->
                                        <a href="/singleProduct/<%= x._id %>" class="icon"><i class="icon-eye"></i></a>
                                    </p>
                                </div>
                            </div>
                            <div class="desc">
                                <h3 style="color: black;"><a href="singleProduct/<%= x._id %>" >
                                        <%= x.productName %>
                                    </a>
                                </h3>
                                <span class="price">RS: <%= x.price %></span>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%-include('../user/layout/user-footer-layout.ejs') -%>

    