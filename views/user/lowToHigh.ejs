<%-include('../user/layout/user-header-layout.ejs') -%>
<%-include('../user/sort-filter.ejs') -%>

<div id="fh5co-product" style="background-color: rgb(225, 225, 225)">
  <div class="container">
    <div class="row">
      <% products.forEach(function(x){ %>
      <div class="col-md-4 text-center animate-box" style="color: black">
        <div class="product">
          <div
            class="product-grid"
            style="background-image: url('/images/cardigans/<%= x.image[0] %>')"
          >
            <div class="inner">
              <p>
                <a href="/singleProduct/<%= x._id %>" class="icon"
                  ><i class="icon-eye"></i
                ></a>
              </p>
            </div>
          </div>
          <div class="desc">
            <h3 style="color: black">
              <a href="singleProduct/<%= x._id %>"> <%= x.productName %> </a>
            </h3>
            <span class="price">RS: <%= x.price %></span>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="pagination-wrap">
        <% if(hasPreviousPage){ %>
        <a
          style="
            text-decoration: none;
            padding: 0.5rem;
            margin: 0 1rem;
            color: rgb(82, 81, 80);
          "
          class="text-center"
          href="/sortLow?page=<%= PreviousPage %>"
          ><i class="fa fa-chevron-left" aria-hidden="true"></i>&nbsp;
          Previous</a
        >
        <% } %>
        <a
          style="
            text-decoration: none;
            padding: 0.5rem;
            margin: 0 1rem;
            color: rgb(82, 81, 80);
            border: 2px solid rgb(82, 81, 80);
            border-radius: 50px;
          "
          href="/sortLow?page=<%= page %>"
        >
          <%= page %>
        </a>
        <% if(hasNextPage) { %>
        <a
          style="
            text-decoration: none;
            padding: 0.5rem;
            margin: 0 1rem;
            color: rgb(82, 81, 80);
          "
          href="/sortLow?page=<%=  page+1 %>"
          >Next &nbsp; <i class="fa fa-chevron-right" aria-hidden="true"></i
        ></a>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%-include('../user/layout/user-footer-layout.ejs') -%>
