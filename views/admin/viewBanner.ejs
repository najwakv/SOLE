<%- include('../admin/layout/admin-header-layout.ejs') -%>

<div class="col-lg">
  <div class="card">
    <div class="card-body">
      <div style="display: flex; justify-content: space-between">
        <h5 class="card-title">Banner</h5>
        <div>
          <form action="/admin/addBannerPage" method="get">
            <button class="btn btn-success me-md-2" type="submit">
              Add Banner
            </button>
          </form>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Index</th>
              <th scope="col">Banner Name</th>
              <th scope="col">Description</th>
              <th scope="col">Image</th>
              <th scope="col">ACTIONS</th>
            </tr>
          </thead>
          <tbody>
            <% banners.forEach(function(banner){ %>
            <tr>
              <th scope="row"><%= index++ %></th>
              <td><%= banner.bannerName %></td>
              <td><%= banner.description %></td>
              <td>
                <img
                  src="/images/cardigans/<%= banner.image %>"
                  alt=""
                  style="height: 50px; width: 60px"
                />
              </td>
              <td>
                <form
                  action="/admin/deleteBanner/<%= banner._id %>"
                  method="post"
                >
                  <button
                    type="submit"
                    class="btn btn-danger"
                    style="width: 75px; height: 38px ;"
                    onclick="return confirm('Are you sure you want to delete ?')"
                  >
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>
                <br />

                <% if(banner.status){%>
                <form
                  action="/admin/bannerUnblock/<%= banner._id %> "
                  method="post"
                >
                  <button
                    type="submit"
                    class="badge badge-danger"
                    style="width: 75px; height: 38px"
                  >
                    List
                  </button>
                </form>
                <%}else{%>
                <form
                  action="/admin/bannerBlock/<%= banner._id %> "
                  method="post"
                >
                  <button
                    type="submit"
                    class="badge badge-success"
                    style="width: 78px; height: 38px"
                  >
                    Unlist
                  </button>
                </form>
                <%}%>

                <br />
                <a
                  class="btn btn-primary"
                  href="/admin/editbannerpage/<%= banner._id %> "
                  role="button"
                  style="width: 75px; height: 38px"
                  ><i class="bi bi-pen-fill"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../admin/layout/admin-footer-layout.ejs') -%>
