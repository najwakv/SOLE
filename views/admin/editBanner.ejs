<%-include('../admin/layout/admin-header-layout.ejs') -%>
<div class="col-lg">
  <div class="card">
    <div class="card-body">
      <div class="card-title">Add Banner</div>
      <hr />
      <form
        action="/admin/updateBanner/<%= banner._id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="input-4">Banner Name</label>
          <input
            class="form-control"
            id="input-4"
            type="text"
            placeholder="Banner Name"
            value="<%= banner.bannerName %>"
            required
            name="bannerName"
          />
        </div>

        <div class="form-group">
          <label for="input-5">Description</label>
          <input
            class="form-control"
            id="input-5"
            type="text"
            placeholder="Description"
            value="<%= banner.description %>"
            required
            name="description"
          />
        </div>

        <div class="form-group">
          <img
            src="/images/Cardigans/<%= banner.image %>"
            alt=""
            style="height: 50px; width: 60px"
          />
        </div>

        <div class="form-group">
          <label for="input-5">Image</label>
          <input
            type="file"
            class="form-control"
            accept="image/*"
            multiple
            id="input-5"
            name="image"
            required
            placeholder="Choose an image"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-success px-5">
            Update Banner
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%-include('../admin/layout/admin-footer-layout.ejs') -%>
