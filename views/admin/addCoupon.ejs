<%-include('../admin/layout/admin-header-layout.ejs') -%>

    <div class="col-lg">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Add Coupon</div>
                <hr>
                <form action="/admin/addCoupon" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="input-4">Coupon Code</label>
                        <input class="form-control" id="input-4" type="text" placeholder="Coupon Code" required
                            name="couponCode">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Discount Percentage</label>
                        <input class="form-control" id="input-5" type="number" placeholder="Discount" required
                            name="discount">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Minimum Purchase Amount</label>
                        <input class="form-control" id="input-5" type="number" placeholder="Minimum Purchase Amount" required
                            name="minimumAmount">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Maximum Discount</label>
                        <input class="form-control" id="input-5" type="number" placeholder="Maximum Discount Amount" required
                            name="maximumDiscount">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Expiry Date</label>
                        <input class="form-control" id="input-5" type="date" placeholder="Expiry Date" required
                            name="expiryDate">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Limit</label>
                        <input class="form-control" id="input-5" type="number" placeholder="Limit of coupon" required
                            name="limit">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success px-5"> Add Coupon</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    

<%-include('../admin/layout/admin-footer-layout') -%>