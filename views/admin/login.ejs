<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin Panel</title>
    <!-- loader-->

    <!--favicon-->
    <link rel="icon" href="assets/images/favicon.ico" type="image/x-icon" />
    <!-- Bootstrap core CSS-->
    <link
      href="/stylesheets/admin/homestyle/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- animate CSS-->
    <link
      href="/stylesheets/admin/homestyle/animate.css"
      rel="stylesheet"
      type="text/css"
    />
    <!-- Icons CSS-->
    <link
      href="/stylesheets/admin/homestyle/icons.css"
      rel="stylesheet"
      type="text/css"
    />
    <!-- Custom Style-->
    <link href="/stylesheets/admin/homestyle/app-style.css" rel="stylesheet" />
  </head>

  <body class="bg-theme bg-theme9">
    <!-- Start wrapper-->
    <div id="wrapper">
      <div class="card card-authentication1 mx-auto my-5">
        <div class="card-body">
          <div class="card-content p-2">
            <div class="card-title text-uppercase text-center py-3">
              Sign In
            </div>
            <form action="/admin/login" method="post">
              <div class="form-group">
                <label for="exampleInputUsername" class="sr-only">Email</label>
                <div class="position-relative has-icon-right">
                  <input
                    type="text"
                    id="exampleInputUsername"
                    class="form-control input-shadow"
                    placeholder="Enter Email"
                    name="email"
                    value="admin@gmail.com"
                  />
                  <div class="form-control-position">
                    <i class="icon-user"></i>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword" class="sr-only"
                  >Password</label
                >
                <div class="position-relative has-icon-right">
                  <input
                    type="password"
                    id="exampleInputPassword"
                    class="form-control input-shadow"
                    placeholder="Enter Password"
                    name="password"
                    value="admin123"
                  />
                  <div class="form-control-position">
                    <i class="icon-lock"></i>
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-6 text-right">
                  <a href="reset-password.html">Reset Password</a>
                </div>
              </div>
              <button type="submit" class="btn btn-light btn-block">
                Sign In
              </button>
            </form>
          </div>
        </div>
      </div>

      <!--end color switcher-->
    </div>
    <!--wrapper-->

    <!-- Bootstrap core JavaScript-->
    <script src="/javascripts/admin/homejs/jquery.min.js"></script>
    <script src="/javascripts/admin/homejs/popper.min.js"></script>
    <script src="/javascripts/admin/homejs/bootstrap.min.js"></script>
  </body>
</html>
