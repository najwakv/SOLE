<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

<script>





  let products = document.getElementById('productsID').innerHTML;
  let sold = document.getElementById('soldID').innerHTML;
  



  var xValues = ["Total orders", "Total Products"];
  var yValues = [sold, products];
  var barColors = [
    "#ffffff",
    "#6c6c6c"
  ];
  
  new Chart("myChart", {
    type: "doughnut",
    data: {
      labels: xValues,
      datasets: [{
        backgroundColor: barColors,
        data: yValues
      }]
    },
    
  });
  </script>

  
