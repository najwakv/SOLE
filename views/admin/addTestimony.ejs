<%-include('../admin/layout/admin-header-layout.ejs') -%>

<div class="col-lg">
  <div class="card">
    <div class="card-body">
      <div class="card-title">Add Testimony</div>
      <hr />
      <form
        action="/admin/addTestimony"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="input-4">Name</label>
          <input
            class="form-control"
            id="input-4"
            type="text"
            placeholder="Name"
            required
            name="name"
          />
        </div>

        <div class="form-group">
          <label for="input-5">Description</label>
          <input
            class="form-control"
            id="input-5"
            type="text"
            placeholder="Description"
            required
            name="description"
          />
        </div>

        <div class="form-group">
          <label for="input-5">Image</label>
          <input
            type="file"
            accept="image/*"
            multiple
            class="form-control"
            id="input-5"
            name="image"
            required
            placeholder="Choose an image"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-success px-5">
            Add Testimony
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%-include('../admin/layout/admin-footer-layout') -%>
